+static void bch2_stripe_close(struct bch_fs *c, struct ec_stripe_new *s)
+{
+	BUG_ON(!s->idx);
+
+	guard(spinlock)(&c->ec_stripes_new_lock);
+	hlist_del_init(&s->hash);
+
+	s->idx = 0;
+}

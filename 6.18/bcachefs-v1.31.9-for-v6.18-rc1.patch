+#define btree_err(type, c, ca, b, i, k, _err_type, msg, ...)		\
+({									\
+	int _ret = __btree_err(type, c, ca, b, i, k, write,		\
+			       BCH_FSCK_ERR_##_err_type,		\
+			       failed, err_msg,				\
+			       msg, ##__VA_ARGS__);			\
+									\
+	if (!bch2_err_matches(_ret, BCH_ERR_fsck_fix)) {		\
+		ret = _ret;						\
+		goto fsck_err;						\
+	}								\
+									\
+	true;								\
+})

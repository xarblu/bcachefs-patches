+static inline bool bpos_in_btree_node_key(struct bpos pos, const struct bkey_i *k)
+{
+	if (bpos_gt(pos, k->k.p))
+		return false;
+
+	if (k->k.type == KEY_TYPE_btree_ptr_v2 &&
+	    bpos_lt(pos, bkey_i_to_btree_ptr_v2_c(k)->v.min_key))
+		return false;
+
+	return true;
+}

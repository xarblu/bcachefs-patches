+ */
+
+#include "bcachefs.h"
+
+#include "alloc/background.h"
+#include "alloc/backpointers.h"
+#include "alloc/buckets.h"
+#include "alloc/foreground.h"
+#include "alloc/lru.h"
+
+#include "btree/iter.h"
+#include "btree/update.h"

+
+#define __bkey_extent_entry_for_each_from(_start, _end, _entry)		\
+	for ((_entry) = (_start);					\
+	     (_entry) < (_end);						\
+	     (_entry) = extent_entry_next_safe(_entry, _end))
+
+#define __bkey_ptr_next(_ptr, _end)					\

+void __bch2_check_set_feature(struct bch_fs *c, unsigned feat)
+{
+	guard(mutex)(&c->sb_lock);
+	if (!(c->sb.features & BIT_ULL(feat))) {
+		c->disk_sb.sb->features[0] |= cpu_to_le64(BIT_ULL(feat));
+
+		bch2_write_super(c);
+	}
+}

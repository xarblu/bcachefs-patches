+		if (bch2_dev_in_target(c, ptr->dev, target) &&
+		    (ca = bch2_dev_rcu_noerror(c, ptr->dev)) &&
+		    (!ptr->cached ||
+		     !dev_ptr_stale_rcu(ca, ptr)))
+			return true;

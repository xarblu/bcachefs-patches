+	u64 old, new;
+
+	old = this_cpu_read(c->pcpu->sectors_available);
+	do {
+		if (sectors > old)
+			return __bch2_disk_reservation_add(c, res, sectors, flags);
+
+		new = old - sectors;
+	} while (!this_cpu_try_cmpxchg(c->pcpu->sectors_available, &old, new));
+
+	this_cpu_add(*c->online_reserved, sectors);
+	res->sectors			+= sectors;
+	return 0;
